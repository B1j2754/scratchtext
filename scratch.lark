start: function_definition+

function_definition: FUNCTION "()" "{" instruction+ "}"
instruction: FUNCTION "(" NUMBER ")" | FOREVER "{" instruction+  "}" | CONTROL "(" NUMBER ")" "{" instruction+ "}"

CONTROL: "repeat"
FOREVER: "forever"
FUNCTION: CNAME
NUMBER: SIGNED_NUMBER
WHITESPACE: (" " | "\n")+

%import common.CNAME
%import common.SIGNED_NUMBER
%ignore WHITESPACE
